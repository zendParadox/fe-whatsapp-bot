// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Enum untuk tipe transaksi
enum TransactionType {
  INCOME
  EXPENSE
}

// BARU: Enum untuk metode pembayaran
enum PaymentMethodType {
  CASH
  SHOPEEPAY
  GOPAY
  BANK_TRANSFER
  DEBIT_CARD
  CREDIT_CARD
  E_WALLET // Untuk e-wallet lainnya
}

// ğŸ‘¤ Model untuk pengguna aplikasi
model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String?
  password     String
  whatsapp_jid String?  @unique
  avatar_url   String?  // URL foto profil di Supabase Storage
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt @default(now())

  transactions Transaction[]
  categories   Category[]
  budgets      Budget[]
  
  // Relasi ke token reset password
  resetTokens  ResetPasswordToken[]
  
  // Relasi ke hutang
  debts        Debt[]
  
  // Relasi ke LID mapping
  lidMappings  LidMapping[]
}

// ğŸ”— Model untuk mapping WhatsApp Linked ID ke nomor telepon
model LidMapping {
  id         String   @id @default(uuid())
  lid        String   @unique  // e.g., "162581826281610"
  phone      String             // e.g., "6282164351960"
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  
  user_id    String?
  user       User?    @relation(fields: [user_id], references: [id], onDelete: SetNull)
  
  @@index([lid])
  @@index([phone])
}

// ğŸ”‘ Model untuk token reset password
model ResetPasswordToken {
  id        String   @id @default(uuid())
  token     String   @unique
  expiresAt DateTime
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([userId])
}

// ğŸ“’ Enum untuk tipe hutang
enum DebtType {
  HUTANG   // Saya berhutang (Payable)
  PIUTANG  // Orang lain berhutang (Receivable)
}

// ğŸ“’ Enum untuk status hutang
enum DebtStatus {
  UNPAID
  PAID
}

// ğŸ“’ Model untuk mencatat Hutang & Piutang
model Debt {
  id          String   @id @default(uuid())
  amount      Decimal  @db.Decimal(12, 2)
  type        DebtType
  status      DebtStatus @default(UNPAID)
  person_name String   // Nama orang yang berhutang/di-hutangi
  description String?
  due_date    DateTime? 
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  user_id     String
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
}

// ğŸ·ï¸ Model untuk kategori transaksi
model Category {
  id    String @id @default(uuid())
  name  String

  user_id String
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  transactions Transaction[]
  budgets      Budget[]

  @@unique([user_id, name])
}

// ğŸ¯ Model untuk budget bulanan
model Budget {
  id        String  @id @default(uuid())
  amount    Decimal @db.Decimal(12, 2)
  month     Int // 1-12
  year      Int

  category_id String
  category    Category @relation(fields: [category_id], references: [id], onDelete: Cascade)

  user_id String
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([user_id, category_id, month, year])
}

// ğŸ”„ Model Transaction yang sudah di-refactor
model Transaction {
  id          String   @id @default(uuid())
  type        TransactionType
  amount      Decimal  @db.Decimal(12, 2)
  description String?
  created_at  DateTime @default(now())

  // DIUBAH: Tambahkan kolom payment_method
  payment_method PaymentMethodType? // Opsional, agar tidak error pada data lama & transaksi INCOME

  user_id String
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  category_id String?
  category    Category? @relation(fields: [category_id], references: [id], onDelete: SetNull)

  @@index([user_id])
  @@index([category_id])
}